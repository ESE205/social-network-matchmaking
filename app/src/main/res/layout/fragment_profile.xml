<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/profile_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/profile_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="88dp"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_im" />

        <TextView
            android:id="@+id/profile_tv_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:layout_marginTop="64dp"
            android:background="@color/cardview_dark_background"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="About"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_user_about"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_textview_name"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_user_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_about"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:background="@color/cardview_dark_background"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Gender"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_user_gender"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_user_about"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_user_gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_age"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_gender"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:background="@color/cardview_dark_background"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Age"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_user_age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_user_gender"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_user_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_city"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_age"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:background="@color/cardview_dark_background"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="City"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/profile_tv_user_city"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_user_age"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/profile_tv_user_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_section_height"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/profile_btn_match"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv_city"
            app:layout_constraintVertical_chainStyle="packed" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>