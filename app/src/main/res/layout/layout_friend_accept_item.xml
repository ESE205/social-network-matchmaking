<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_accept_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/friend_accept_item_image"
        android:layout_width="86dp"
        android:layout_height="80dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/friend_accept_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="75dp"
        android:layout_toEndOf="@+id/friend_accept_item_image"
        android:text="Text Here"
        android:textSize="24sp" />


    <ImageButton
        android:id="@+id/friend_accept_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/friend_accept_item_name"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:background="@null"
        app:srcCompat="@drawable/ic_add_circle_black_24dp"
        />

    <ImageButton
        android:id="@+id/friend_reject_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/friend_accept_item_btn"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@null"
        app:srcCompat="@drawable/ic_cancel_black_24dp"
        />

</RelativeLayout>